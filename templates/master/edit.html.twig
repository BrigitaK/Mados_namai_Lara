{% extends 'base.html.twig' %}

{% block title %}Edit Master!{% endblock %}

{% block body %}
    <h1 class="title">Edit Master!</h1>
    <div class="list">
    <form action="{{path('master_update', {id: master.id})}}" method="POST">
            <div class="create-name">Name: <input class="input" type="text" name="master_name" value="{{master.name}}"></div>
            <div class="create-surname">Surname: <input class="input" type="text" name="master_surname" value="{{master.surname}}"></div>
            <div class="add-btn">
                <button class="add" type="submit">Edit Master</button>
            </div>
        </form>
    </div>
{% endblock %}