{% extends 'base.html.twig' %}

{% block title %}Outfits List!{% endblock %}

{% block body %}
    <h1 class="title">Outfits in Library</h1>

    <div class="sort">
        <div class="title2 title-filter">List filter by:</div>
        <form action="{{ path('outfit_index')}}" method="GET">
            <select class="select-filter" name="type">
            <option value="default">View All</option>
                {% for outfit in outfits %}
                <option value="{{outfit.type}}" {% if outfitType == outfit.type %} selected {% endif %}>{{outfit.type}}</option>
                {% endfor %}
            </select>
            <div class="sort-btn">
                <button class="edit" type="submit">Filter it!</button>
            </div>
        </form>
        <div class="clear-btn">
            <a class="delete" href="{{ path('outfit_index')}}">clear</a>
        </div>
    </div>
    {% for outfit in outfits %}
        <div class="list-p">
            <div class="name-prop">{{outfit.type}} <span class="name-prop1">Master: {{outfit.master.name}} {{outfit.master.surname}}</span></div>
            <div class="delete-btn">
                <form action="{{ path('outfit_delete', {id: outfit.id}) }}" method="POST">
                <button class="delete" type="submit">DELETE</button>
                </form>
            </div>
            <div class="edit-btn">
                <a class="edit" href="{{ path('outfit_edit', {id: outfit.id}) }}">Edit outfit</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
