{% extends 'base.html.twig' %}

{% block title %}Create new Outfit!{% endblock %}

{% block body %}
    <h1 class="title">Create new Outfit! </h1>
    <div class="list">
        <form action="{{path('outfit_store')}}" method="POST">
            <div class="create-name">Type:<input class="input" type="text" name="outfit_type"></div>
            <div class="create-name">Color:<input class="input" type="text" name="outfit_color"></div>
            <div class="create-name">Size:<input class="input" type="text" name="outfit_size"></div>
            <div class="create-name">About:<textarea class="input" name="outfit_about" id="summernote"></textarea></div>
            <select class="select" name="outfit_master_id">
            {% for master in masters %}
            <option  value="{{master.id}}">{{master.name}} {{master.surname}}</option>
            {% endfor %}
            </select>
            <div class="add-btn">
                <button class="add" type="submit">Add new Outfit</button>
            </div>
        </form>
    </div>
{% endblock %}
